@inherits LayoutComponentBase

@inject AuthenticationStateProvider AuthStateProvider
@inject ILoginService LoginService
@inject UserState UserState
@inject NavigationManager Navigation

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 user-info">
            <NavLink class="user-link" href="/profile">
                <span class="user-name">
                    @(UserState.CurrentUser != null ? UserState.CurrentUser.FullName : "Guest")
                </span>
                <span class="user-icon">
                    <i class="bi bi-person-fill"></i>
                </span>
            </NavLink>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var username = authState.User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value;

        if (!string.IsNullOrEmpty(username))
        {
            UserState.CurrentUser = await LoginService.GetUserByUsernameAsync(username);
        }
        else
        {
            // Nếu không ở /login thì redirect về /login
            var currentUrl = Navigation.Uri.ToLower();
            if (!currentUrl.EndsWith("/login"))
            {
                Navigation.NavigateTo("/login", true);
            }
        }
    }
}


<style>
    .user-info {
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }


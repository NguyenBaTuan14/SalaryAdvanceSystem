@page "/profile"
@inject AuthenticationStateProvider AuthStateProvider
@inject ILoginService LoginService
@inject UserState UserState

<div class="container mt-4">
    <h3 class="mb-3">User Profile</h3>

    @if (UserState.CurrentUser == null)
    {
        <div class="alert alert-warning">Bạn chưa đăng nhập.</div>
    }
    else
    {
        <!-- Thông tin người dùng -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom-0">
                <h6 class="fw-bold mb-0">Information</h6>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered mb-0">
                    <tbody>
                        <tr>
                            <th style="width: 200px;">Full Name</th>
                            <td>@UserState.CurrentUser.FullName</td>
                        </tr>
                        <tr>
                            <th>Email Address</th>
                            <td>@UserState.CurrentUser.Email</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>@UserState.CurrentUser.Gender</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>@UserState.CurrentUser.Address</td>
                        </tr>
                        <tr>
                            <th>Phone Number</th>
                            <td>@UserState.CurrentUser.PhoneNumber</td>
                        </tr>
                        <tr>
                            <th>Birthday</th>
                            <td>@UserState.CurrentUser.DateOfBirth.ToString("dd/MM/yyyy")</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Mục password -->
            <div class="card-header bg-white border-top">
                <h6 class="fw-bold mb-0">Password</h6>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered mb-0">
                    <tbody>
                        <tr>
                            <th style="width: 200px;">Password</th>
                            <td>
                                ****** 
                            </td>
                            <td>
                                <NavLink class="ms-2 text-decoration-none text-primary" href="/change-password">Change Password</NavLink>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>



